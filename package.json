{
  "name": "@vxna/gltf-loader",
  "version": "0.0.0-development",
  "description": "An opinionated webpack loader for glTF files",
  "author": "vxna",
  "license": "MIT",
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vxna/gltf-loader.git"
  },
  "keywords": [
    "webpack",
    "loader",
    "gltf"
  ],
  "engines": {
    "node": ">= 8"
  },
  "scripts": {
    "pretest": "yarn lint",
    "test": "yarn test:jest",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "posttest": "yarn format",
    "lint": "eslint . --cache --fix",
    "format": "prettier --write **/*.{js,md}"
  },
  "dependencies": {
    "common-tags": "^1.8.0",
    "loader-utils": "^1.2.3",
    "neo-async": "^2.6.0"
  },
  "devDependencies": {
    "@webpack-contrib/test-utils": "^0.1.3",
    "eslint": "^5.16.0",
    "eslint-config-tamia": "^6.0.2",
    "file-loader": "^3.0.1",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "webpack": "^4.29.6"
  },
  "peerDependencies": {
    "webpack": "^4.0.0"
  },
  "eslintConfig": {
    "extends": "tamia"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  }
}
